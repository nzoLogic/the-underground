@import "materialize";

body {
    background-color: #000;
    font-family: Helvetica;
}

.landing {
    height: 100vh;
    background-image: url(<%= asset_path "oneself.jpg" %>);
    background-size: cover;
}

.grey-outline {
    border: 1px solid gray;
}

.event-box {
    height: 40vh;
}

.moment-collection {
    overflow-x: scroll;
}

.parallax-container {
    background-color: rgba(0,0,0,.5);
}

.btn-floating {
    position: fixed !important;
    top: 1%;
    right: 1%;
}

.entry {
    position: absolute;
    bottom: 33%;
    left: 43%;
}

.user-header {
    background-color: #666;
    height: 40px;
    margin-top: 10%;
    padding: auto 0;
}

.input-field .prefix.active {
     color: #fff;
   }
.input-field {
  color: #fff;
}
