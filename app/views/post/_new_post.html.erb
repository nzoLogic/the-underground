<div class="modal-content">
  <%= form_for @post, url: new_post_path(@event)  do |f| %>
    <div class="">
        <%= f.text_field :title, placeholder: "Title", max: 200, required: true %>
    </div>
    <div class="">
        <%= f.text_field :message, placeholder: "Message", required: true, min: 1, max: 1000, data:{error: "wrong" }%>
        <%= f.file_field :photo, placeholder: "Photo" %>
    </div>
    <div class="">
        <%= f.submit "Create Post", class:"btn green accent-2" %>
    </div>
    <% end %>

</div>
